{
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"AHK++.v2.file": {
		"interpreterPath": "C:\\Users\\BilovM\\AppData\\Local\\Programs\\AutoHotkey\\v2\\AutoHotkey64.exe"
	},
	"editor.cursorBlinking": "phase",
	"editor.fontFamily": "JetBrainsMono Nerd Font",
	"editor.fontSize": 14,
	"editor.fontLigatures": true,
	"editor.guides.indentation": false,
	"editor.hideCursorInOverviewRuler": true,
	"editor.insertSpaces": false,
	"editor.lineHeight": 1.7,
	"editor.matchBrackets": "near",
	"editor.links": false,
	"editor.minimap.enabled": false,
	"editor.occurrencesHighlight": "off",
	"editor.padding.top": 24,
	"editor.renderWhitespace": "none",
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.smoothScrolling": true,
	"editor.tabSize": 2,
	"editor.tokenColorCustomizations": {
		"[One Dark Pro Mix]": {
			"textMateRules": [
				// {
				// 	"scope": ["entity.name.function", "support.function"],
				// 	"settings": { "fontStyle": "" }
				// },
				{
					"scope": "comment",
					"settings": {
						"fontStyle": "italic"
					}
				},
				{
					"scope": [
						"punctuation",
						"punctuation.definition.tag",
						"punctuation.definition.string",
						"punctuation.definition.comment",
						"punctuation.terminator",
						"punctuation.separator",
						"comment"
					],
					"settings": {
						"foreground": "#5c6370"
					}
				}
			]
		}
	},
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.sortOrder": "filesFirst",
	"explorer.sortOrderLexicographicOptions": "lower",
	"extensions.experimental.affinity": {
		"vscode.vim": 1
	},
	"files.autoSave": "onFocusChange",
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.postCommitCommand": "sync",
	"git.useEditorAsCommitInput": false,
	"markdown.preview.breaks": true,
	"markdown.preview.fontFamily": "Quicksand, -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
	"markdown.preview.fontSize": 16,
	"prettier.useTabs": true,
	"security.workspace.trust.untrustedFiles": "open",
	"symbols.hidesExplorerArrows": true,
	"vim.easymotion": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"after": ["leader", "leader", "2", "s"],
			"before": ["s"]
		}
	],
	"window.commandCenter": false,
	"window.titleBarStyle": "native",
	"workbench.colorCustomizations": {
		"activityBar.border": "#00000000",
		"editor.lineHighlightBorder": "#00000000",
		"editorGroup.border": "#00000000",
		"editorOverviewRuler.border": "#00000000",
		"focusBorder": "#878580",
		"panel.border": "#00000000",
		"sideBar.border": "#00000000",
		"sideBarSectionHeader.border": "#00000000",
		"statusBar.border": "#00000000",
		"tab.border": "#00000000",
		"titleBar.border": "#00000000",
		"widget.border": "#00000000"
	},
	"workbench.colorTheme": "One Dark Pro Mix",
	"workbench.editor.empty.hint": "hidden",
	"workbench.iconTheme": "symbols",
	"workbench.layoutControl.enabled": false,
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"zenMode.centerLayout": false,
	"zenMode.fullScreen": false,
	"zenMode.showTabs": "none"
}
